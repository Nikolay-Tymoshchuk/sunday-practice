
    <form class="book-form" action="">
        <h2>Fill the details of the new book</h2>
        <div class="label-box">
            <input id="author" type="text" name="author" autocomplete="off" placeholder="author name..."/>
            <label for="author">Author</label>
        </div>
        <div class="label-box">
            <input id="title" type="text" name="title"  placeholder="title..."/>
            <label for="title">Title</label>
        </div>
        <div class="label-box">
            <input id="image" type="text" name="img" autocomplete="off" placeholder="image url..."/>
            <label for="image">Img url</label>
        </div>
        <div class="label-box">
            <textarea id="plot" rows="8" name="plot" autocomplete="off" placeholder="description..."></textarea>
            <label for="plot">Plot</label>
        </div>
        <div class="button-box">
            <button class="button btn-save" type="submit">Save</button>
        </div>
    </form>
    
